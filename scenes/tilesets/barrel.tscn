var health


# Called when the node enters the scene tree for the first time.
func _ready():
	health = 1


# Called every frame. 'delta' is the elapsed time since the previous frame.
#func _process(delta):
#	pass

func damage(dmg):
	health -= 1
	if(health <= 0):
		$AnimationPlayer.play(\"expl\")
		$Sprite.visible = false
		remove_child($LightOccluder2D)
		remove_child($CollisionShape2D)


func _on_explRadius_body_entered(body):
	if(body.name == \"player\"):
		gameController.health -= 30
	if(body.collision_layer == 2):
		body.damage(200)

func _on_AnimationPlayer_animation_finished(anim_name):
	if(anim_name == \"expl\"):
		queue_free()

func _on_hitRadius_body_entered(body):
	print(\"XDDDD\")
	if(body.collision_layer == 128):
		print(\"XD\")
		damage(1)
